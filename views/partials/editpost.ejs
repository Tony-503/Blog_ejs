
    
    <%- include("../partials/header.ejs") %>

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body shadow rounded form-container">
                <h1 class="text-center  mb-4">Edit Your Content</h1>
                <form action="/submit" method="POST">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="title" value="<%= name %>" placeholder="Title"/>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" name="content" rows="5" required><%= text %></textarea>
                    </div>
                    <input type="submit" name="Submit" value="Publish" class="btn btn-primary w-100"/>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include("../partials/footer.ejs") %>