<div class="post-item">
  <% if (post.updatedAt) { %>
    <div class="updated-badge">Updated</div>
  <% } %>
  
  <h3 class="post-item-title"><%= post.title %></h3>
  
  <div class="post-item-date">
    <span>🕒</span>
    <span><%= post.updatedAt || post.createdAt %></span>
  </div>
  
  <div class="post-item-content">
    <%= post.content %>
  </div>
  
  <div class="post-item-actions">
    <form action="/edit" method="POST" class="d-inline">
      <input type="hidden" name="id" value="<%= post.id %>">
      <button type="submit" class="btn btn-post-action btn-post-edit">
        ✏️ Edit
      </button>
    </form>
    
    <form action="/delete" method="POST" class="d-inline">
      <input type="hidden" name="id" value="<%= post.id %>">
      <button type="submit" class="btn btn-post-action btn-post-delete">
        🗑️ Delete
      </button>
    </form>
  </div>
</div>