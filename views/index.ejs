<%- include("partials/header.ejs") %>



<div class="hero-section position-relative">
  <div class="floating-elements"></div>
  <div class="container">
    <div class="row g-4 align-items-stretch">
      <!-- Form Section -->
      <div class="col-lg-6 col-md-12">
        <div class="form-container h-100 d-flex flex-column justify-content-center">
          <h2 class="section-title text-center">🚀 Launch a New Post</h2>
          <form action="/submit" method="POST" class="flex-grow-1 d-flex flex-column justify-content-center">
            <div class="mb-4">
              <input type="text" class="form-control" name="title" placeholder="✍️ Enter your amazing title..." required />
            </div>
            <div class="mb-4">
              <textarea class="form-control" name="content" placeholder="📝 Share your thoughts with the world..." rows="6" required></textarea>
            </div>
            <input type="submit" name="Submit" value="Publish to Galaxy" class="btn btn-primary mt-auto" />
          </form>
        </div>
      </div>

      <!-- Posts Section -->
      <div class="col-lg-6 col-md-12">
        <div class="posts-container h-100">
          <h2 class="section-title text-center">🛰 Recent Transmissions</h2>
          <div class="posts-content">
            <% if (posts && posts.length > 0) { %>
              <div class="posts-scroll">
                <% posts.forEach(post => { %>
                  <%- include("partials/post.ejs", { post: post }) %>
                <% }); %>
              </div>
            <% } else { %>
              <div class="no-posts">
                <h3>🌌 The galaxy awaits your first transmission</h3>
                <p>No posts yet - be the first to share something amazing!</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>

